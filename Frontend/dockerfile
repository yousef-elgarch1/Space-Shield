# ──────── Build Stage ────────
FROM node:18-alpine AS builder
WORKDIR /app
# Install dependencies exactly as in lockfile
COPY package.json package-lock.json ./
RUN npm ci                                       # reproducible installs :contentReference[oaicite:0]{index=0}
# Build the optimized static assets
COPY . .
RUN npm run build                                # outputs to dist/ :contentReference[oaicite:1]{index=1}

# ──────── Runtime Stage ────────
FROM node:18-alpine AS runner
WORKDIR /app
# Install only the static file server
RUN npm install -g serve                         # tiny footprint, zero config :contentReference[oaicite:2]{index=2}
# Check if serve exists; install only if missing
RUN if ! command -v serve >/dev/null 2>&1; then \
    echo "serve not found, installing…"; \
    npm install -g serve; \
    else \
    echo "serve already installed, skipping"; \
    fi

# Copy built assets
COPY --from=builder /app/dist ./dist
# Expose default serve port
EXPOSE 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
