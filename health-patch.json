{
    "spec": {
      "template": {
        "spec": {
          "containers": [
            {
              "name": "backend",
              "livenessProbe": {
                "httpGet": {
                  "path": "/actuator/health",
                  "port": 8080
                },
                "initialDelaySeconds": 120,
                "periodSeconds": 30,
                "timeoutSeconds": 10,
                "failureThreshold": 3
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/actuator/health/readiness",
                  "port": 8080
                },
                "initialDelaySeconds": 90,
                "periodSeconds": 10,
                "timeoutSeconds": 5,
                "failureThreshold": 3
              }
            }
          ]
        }
      }
    }
  }